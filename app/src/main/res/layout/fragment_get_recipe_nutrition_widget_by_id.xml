<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/bad_nutritions_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/nutritions_bad_nutritions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bad_nutritions_recycler_view"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bad_nutritions_title"/>
    <TextView
        android:id="@+id/good_nutritions_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/nutritions_good_nutritions_title"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bad_nutritions_recycler_view"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/good_nutritions_recycler_view"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/good_nutritions_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>